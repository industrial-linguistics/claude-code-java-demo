<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="001-create-trades-table" author="system">
        <createTable tableName="trades">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="trade_reference" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="trade_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="value_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="direction" type="VARCHAR(4)">
                <constraints nullable="false"/>
            </column>
            <column name="base_currency" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="quote_currency" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="base_amount" type="DECIMAL(19,4)">
                <constraints nullable="false"/>
            </column>
            <column name="exchange_rate" type="DECIMAL(15,6)">
                <constraints nullable="false"/>
            </column>
            <column name="quote_amount" type="DECIMAL(19,4)">
                <constraints nullable="false"/>
            </column>
            <column name="counterparty" type="VARCHAR(100)"/>
            <column name="trader" type="VARCHAR(50)"/>
            <column name="notes" type="VARCHAR(500)"/>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="trades" indexName="idx_trade_date">
            <column name="trade_date"/>
        </createIndex>
        <createIndex tableName="trades" indexName="idx_value_date">
            <column name="value_date"/>
        </createIndex>
        <createIndex tableName="trades" indexName="idx_status">
            <column name="status"/>
        </createIndex>
        <createIndex tableName="trades" indexName="idx_trader">
            <column name="trader"/>
        </createIndex>
    </changeSet>

    <changeSet id="002-create-trade-audit-table" author="system">
        <createTable tableName="trade_audit">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="trade_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="trade_reference" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="audit_timestamp" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="audit_user" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="action" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="change_details" type="TEXT"/>
            <column name="before_snapshot" type="TEXT"/>
            <column name="after_snapshot" type="TEXT"/>
        </createTable>

        <createIndex tableName="trade_audit" indexName="idx_trade_id_audit">
            <column name="trade_id"/>
        </createIndex>
        <createIndex tableName="trade_audit" indexName="idx_audit_timestamp">
            <column name="audit_timestamp"/>
        </createIndex>
    </changeSet>

    <changeSet id="003-create-users-table" author="system">
        <createTable tableName="users">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password_hash" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="full_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
